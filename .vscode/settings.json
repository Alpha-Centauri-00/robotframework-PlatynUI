{
    "eslint.format.enable": true,
    "eslint.lintTask.enable": true,
    "evenBetterToml.semanticTokens": true,
    "files.exclude": {
        "**/.idea": true,
        "**/.mypy_cache": true,
        "**/.pytest_cache": true,
        "**/.ruff_cache": true,
        "**/__pycache__": true
    },
    "files.watcherExclude": {
        "**/.hatch": true,
        "**/.idea": true,
        "**/.mypy_cache": true,
        "**/.pytest_cache": true,
        "**/.ruff_cache": true,
        "**/__pycache__": true,
        "**/target": true
    },
    "git.enableSmartCommit": true,
    "git.followTagsWhenSync": true,
    "prettier.printWidth": 120,
    "prettier.tabWidth": 4,

    "python.analysis.completeFunctionParens": true,
    "python.analysis.diagnosticMode": "workspace",
    "python.terminal.activateEnvInCurrentTerminal": true,
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "black-formatter.args": [
        "--config",
        "${workspaceFolder}/pyproject.toml"
    ],
    "ruff.importStrategy": "fromEnvironment",
    "ruff.lint.args": [
        "--config",
        "${workspaceFolder}/pyproject.toml"
    ],
    "mypy-type-checker.args": [
        "--config-file",
        "pyproject.toml"
    ],
    "mypy-type-checker.importStrategy": "fromEnvironment",
    "debugpy.debugJustMyCode": false,
    "black-formatter.importStrategy": "fromEnvironment",
    "robotcode.debug.attachPython": true,
    "[csharp]": {
        "editor.defaultFormatter": "csharpier.csharpier-vscode"
    },
    "csharp.debug.justMyCode": false,
    "csharp.debug.symbolOptions.searchMicrosoftSymbolServer": false,
    "csharp.debug.symbolOptions.searchNuGetOrgSymbolServer": false,
    "robotcode.robocop.enabled": false
}
